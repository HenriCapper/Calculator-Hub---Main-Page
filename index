  <script>
    let selectedSystem = null;

    // Handle system selection
    document.querySelectorAll('.system-card').forEach(card => {
      card.addEventListener('click', function() {
        // Skip if it's the post system (coming soon)
        if (this.dataset.system === 'post') {
          return;
        }
        
        // Remove previous selection
        document.querySelectorAll('.system-card').forEach(c => c.classList.remove('selected'));
        
        // Select current card
        this.classList.add('selected');
        selectedSystem = this.dataset.system;
        
        // Show step 2 after a brief delay
        setTimeout(() => {
          showStep2();
        }, 300);
      });
    });

    function showStep2() {
      document.getElementById('step2').classList.remove('hidden');
      
      // Hide all calculator groups
      document.querySelectorAll('[id$="-calculators"]').forEach(group => {
        group.classList.add('hidden');
      });
      
      // Show the selected system's calculators
      const calculatorGroup = document.getElementById(selectedSystem + '-calculators');
      if (calculatorGroup) {
        calculatorGroup.classList.remove('hidden');
      }
      
      // Scroll to step 2
      document.getElementById('step2').scrollIntoView({ 
        behavior: 'smooth',
        block: 'start' 
      });
    }

    function goBack() {
      // Hide step 2
      document.getElementById('step2').classList.add('hidden');
      
      // Clear selection
      document.querySelectorAll('.system-card').forEach(c => c.classList.remove('selected'));
      selectedSystem = null;
      
      // Scroll back to step 1
      document.getElementById('step1').scrollIntoView({ 
        behavior: 'smooth',
        block: 'start' 
      });
    }

    // Add some hover effects and animations
    document.addEventListener('DOMContentLoaded', function() {
      // Animate cards on load
      const cards = document.querySelectorAll('.system-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          card.style.transition = 'all 0.4s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });
  </script>


</body>
